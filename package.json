{
  "name": "heavens-above",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Node.js web app and scripts for scraping and displaying data from Heavens Above.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --ci --runInBand",
    "test:coverage": "jest --ci --runInBand --coverage",
    "test:watch": "jest --watch",
    "test:verbose": "jest --ci --runInBand --verbose",
    "build": "echo \"Build step not required for Node.js project\" && exit 0",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "docs:build": "jsdoc -c jsdoc.json -d docs",
    "validate": "npm run lint && npm run format:check && npm run test",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix"
  },
  "dependencies": {
    "cheerio": "^1.1.2",
    "got": "^14.6.1",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "jsdoc": "^4.0.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ayesha-3/heavens-above.git"
  },
  "keywords": [
    "Heavens Above",
    "spider",
    "scraper",
    "astronomy",
    "satellites",
    "express",
    "render",
    "docker"
  ],
  "author": "Mimi <stevenjoezhang@gmail.com> (https://zhangshuqiao.org)",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/ayesha-3/heavens-above/issues"
  },
  "homepage": "https://github.com/ayesha-3/heavens-above#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!docs/**",
      "!coverage/**",
      "!jest.config.js",
      "!eslint.config.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "coverageReporters": ["text", "text-summary", "html", "lcov", "json"],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "./test-reports",
          "outputName": "junit.xml",
          "classNameTemplate": "{classname}",
          "titleTemplate": "{title}",
          "ancestorSeparator": " â€º ",
          "usePathForSuiteName": true
        }
      ]
    ],
    "testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"],
    "verbose": true
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  }
}
